<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.APKTools" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="CodeViewerStyle">
        <item name="android:background">@color/code_background</item>
        <item name="android:textColor">@color/code_text</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
</resources>
